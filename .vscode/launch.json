{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Django",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/backend/manage.py",
        "args": [
          "runserver",
          "--noreload"
        ],
        "django": true,
        "justMyCode": true
      },
      {
        "name": "React App",
        "type": "pwa-chrome",
        "request": "launch",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/frontend/src",
        "runtimeArgs": [
          "--remote-debugging-port=9222"
        ],
        "sourceMaps": true
      }
    ],
    "compounds": [
      {
        "name": "Run Django and React",
        "configurations": ["Django", "React App"]
      }
    ]
  }
  